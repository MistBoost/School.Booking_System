<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:School.OnlineBookingSystem.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="using:School.OnlineBookingSystem.ViewModels"
    xmlns:models="using:School.OnlineBookingSystem.Models"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity" xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    x:Class="School.OnlineBookingSystem.Views.SearchPage"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewModels:SearchPageVm x:Name="Vm"></viewModels:SearchPageVm>
    </Page.DataContext>
    <Page.Transitions>
        <TransitionCollection>
            <NavigationThemeTransition>
                <NavigationThemeTransition.DefaultNavigationTransitionInfo>
                    <EntranceNavigationTransitionInfo />
                </NavigationThemeTransition.DefaultNavigationTransitionInfo>
            </NavigationThemeTransition>
        </TransitionCollection>
    </Page.Transitions>

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="ms-appx:///Assets/WorldWide.jpg"/>
        </Grid.Background>
        <AutoSuggestBox HorizontalAlignment="Left" 
                        Margin="222,141,0,0" 
                        VerticalAlignment="Top"  
                        Width="293" 
                        PlaceholderText="Search hotel"
                        BorderBrush="Black" 
                        Background="Black"
                        x:Name="AutoSuggestBox">
            <Interactivity:Interaction.Behaviors>
                <Core:EventTriggerBehavior EventName="TextChanged">
                    <Core:EventTriggerBehavior.Actions>
                        <Core:InvokeCommandAction Command="{x:Bind Vm.AutoSuggestBoxTextChanged}"
                                                  CommandParameter="{x:Bind AutoSuggestBox.Text}"/>
                    </Core:EventTriggerBehavior.Actions>
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
        </AutoSuggestBox>
        <CalendarDatePicker HorizontalAlignment="Left" 
                            Margin="195,232,0,0" 
                            VerticalAlignment="Top" 
                            Background="Black" 
                            Foreground="White" 
                            BorderBrush="Black"
                            x:Name="CalendarDatePicker">
            <Interactivity:Interaction.Behaviors>
                <Core:EventTriggerBehavior EventName="DateChanged">
                    <Core:EventTriggerBehavior.Actions>
                        <Core:InvokeCommandAction Command="{x:Bind Vm.CheckInDateChanged}"
                                                  CommandParameter="{x:Bind CalendarDatePicker.Date}"/>
                    </Core:EventTriggerBehavior.Actions>
                </Core:EventTriggerBehavior>
            </Interactivity:Interaction.Behaviors>
        </CalendarDatePicker>
        <CalendarDatePicker HorizontalAlignment="Left" 
                            Margin="413,233,0,0" 
                            VerticalAlignment="Top" 
                            BorderBrush="Black" 
                            Background="Black"/>
        <TextBlock x:Name="textBlock_Copy" 
                   HorizontalAlignment="Left" 
                   Margin="417,197,0,0" 
                   TextWrapping="Wrap" 
                   Text="Check out" 
                   VerticalAlignment="Top" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="White"/>
        <TextBlock x:Name="textBlock_Copy1"
                   HorizontalAlignment="Left" 
                   Margin="234,98,0,0" 
                   TextWrapping="Wrap"
                   Text="Going to" 
                   VerticalAlignment="Top" 
                   FontSize="22" 
                   Foreground="White" 
                   FontWeight="Bold"
                   FontFamily="Segoe UI Black"/>
        <ComboBox x:Name="comboBox"  
                  HorizontalAlignment="Left" 
                  Margin="195,309,0,0" 
                  VerticalAlignment="Top" 
                  Width="129" 
                  BorderBrush="Black" 
                  Background="Black" 
                  Height="32">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
        </ComboBox>
        <TextBlock x:Name="textBlock1" 
                   HorizontalAlignment="Left" 
                   Margin="207,279,0,0" 
                   TextWrapping="Wrap" 
                   Text="Adult(18+)"
                   VerticalAlignment="Top" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="White"/>
        <ComboBox x:Name="comboBox1" 
                  HorizontalAlignment="Left" 
                  Margin="418,306,0,0" 
                  VerticalAlignment="Top" 
                  Width="127" 
                  Background="Black" 
                  BorderBrush="Black" 
                  Height="32">
            <ComboBoxItem Content="1"/>
            <ComboBoxItem Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
            <ComboBoxItem Content="6"/>
            <ComboBoxItem Content="7"/>
        </ComboBox>
        <TextBlock x:Name="textBlock1_Copy" 
                   HorizontalAlignment="Left" 
                   Margin="422,279,0,0" 
                   TextWrapping="Wrap" 
                   Text="Children(0-17)" 
                   VerticalAlignment="Top" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="White"/>
        <ListView x:Name="listView" 
                  HorizontalAlignment="Left" 
                  Height="252" 
                  Margin="127,390,0,0" 
                  VerticalAlignment="Top" 
                  Width="493" 
                  BorderBrush="Black"  />
        <Image x:Name="image" 
               HorizontalAlignment="Left" 
               Height="240" 
               Margin="905,98,0,0" 
               VerticalAlignment="Top" 
               Width="412"/>
        <Button x:Name="button"
                Content="Book" 
                HorizontalAlignment="Left" 
                Margin="1151,670,0,0" 
                VerticalAlignment="Top" 
                Foreground="White" 
                Background="Black"/>
        <TextBlock x:Name="textBlock_Copy2" 
                   HorizontalAlignment="Left" 
                   Margin="205,197,0,0" 
                   TextWrapping="Wrap" 
                   Text="Check in" 
                   VerticalAlignment="Top" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="White"/>
        <TextBlock x:Name="textBlock" 
                   HorizontalAlignment="Left" 
                   Margin="905,390,0,0" 
                   Foreground="White" 
                   TextWrapping="Wrap" 
                   Text="France Vancaces Protocol" 
                   VerticalAlignment="Top" 
                   Height="252" 
                   Width="412"/>
    </Grid>
</Page>
